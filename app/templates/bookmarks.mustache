<h3>&nbsp;<a data-action="toggle-delete-bookmarks" href="#"><img src="/app/img/pencil.png" /></a></h3>
<ul class="clearfix">
{{#bookmarks}}
    <li class="tile">
        <a target="_blank" href="{{{link}}}">
            <img class="thumb" src="{{{image}}}" />
            <div class="overlay"><span>{{title}}</span></div>
            <span data-action="delete-bookmark" data-id="{{id}}" class="remove">&nbsp;</span>
        </a>
    </li>
{{/bookmarks}}
{{^bookmarks}}
    <li class="placeholder">Deine Merkliste ist leer.</li>
{{/bookmarks}}
</ul>